<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Juego de Botones Epicos</title>
  <link rel="stylesheet" href="/bootstrap.min.css">
  <script src="/jquery-3.5.1.min.js"></script>
  <script src="/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script> 
  <style>
    .container{
      text-align: center;
    }
    h1{
      margin-top: 150px;
    }
    #reinicia{
      margin-left: 1030px;
      margin-top: 300px;
    }
    #actualizaBtn{
      border-radius: 150px;
      padding: 20px;
    }
    #colores{
      margin-top: 50px;
      margin-right: 400px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="numberdiv">
        <h1>El boton ha sido presionado <span id="numero">?</span> veces</h1>
        <p>Presiona el boton "Actualizar" para cambiar el numero de veces</p>
    </div>

    <div class="d-grid gap-2 col-6 mx-auto">
      <button id="actualizaBtn" class="btn btn-outline-info" type="button">Actualizar</button>
    </div>

    <div id="colores" class="d-grid gap-2 d-md-flex justify-content-md-end">
      <button id="green" class="btn btn-success" type="button">Verde</button>
      <button id="blue" class="btn btn-primary" type="button">Azul</button>
      <button id="pink" class="btn btn-danger" type="button">Rosado</button>
      <button id="opcional" class="btn btn-warning" type="button">Gradiente</button>
    </div>
    <button id="reinicia" class="btn btn-outline-warning">Reiniciar</button>
  </div>  

  <script>
    $(document).ready(function() {
      let socket = io.connect();
      $('#actualizaBtn').on('click', function(){
          socket.emit('sumar');
      });
      $('#reinicia').on('click', function(){
          socket.emit('reiniciar');
      });
      socket.on('contador', function(sumar){
          $('#numero').html(`${sumar}`);
      });


      //desde aqui colores

      $('#pink').click(function(){
        socket.emit('fondoRosado');
      });
      
      $('#green').click(function(){
        socket.emit('fondoVerde');
      });

      $('#blue').click(function(){
        socket.emit('fondoAzul');
      });

      $('#opcional').click(function(){
        socket.emit('fondoOpcional');
      });

      socket.on('cambiar', function(color){
        //$('body').html(`${color}`);
        $('body').css('background-color',`${color}`);
      });

    });

    
  </script>
</body>
</html>